<h1>Current Users</h1>
<table border="1">
	<tr>
		<td>Name</td>
		<td>Email</td>
		<td>Description</td>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= link_to user.name, user_path(user) %></td>
			<td><%= user.email %></td>
			<% if user.description %>
				<td><%= user.description %></td>
			<% else %>
				<td>Say something about yourself :)</td>
			<% end %>
		</tr>
	<% end %>
</table>
